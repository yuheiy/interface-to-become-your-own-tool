{
  "private": true,
  "scripts": {
    "start": "npm-run-all slide -p start:*",
    "start:eleventy": "eleventy --serve",
    "start:slide": "chokidar 'slides.sketch' -c 'npm run slide && touch _data/slides.js'",
    "prebuild": "npm run slide",
    "build": "eleventy",
    "preslide": "rm -rf slides/",
    "slide": "/Applications/Sketch.app/Contents/Resources/sketchtool/bin/sketchtool export artboards slides.sketch --output=slides/"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "chokidar-cli": "^1.2.1",
    "globby": "^9.0.0",
    "js-yaml": "^3.12.1",
    "npm-run-all": "^4.1.5"
  }
}
